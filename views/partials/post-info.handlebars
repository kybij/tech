<article class="post">
  <div class="title">
    <a class="posts" href="/post/{{id}}" target="_blank">{{title}}</a>
  </div>
  <div class="card bg-primary text-white">
    {{blog}}
  </div>
  <div class="meta">
    by {{user.username}} on {{format_date created_at}}
    |
    <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>